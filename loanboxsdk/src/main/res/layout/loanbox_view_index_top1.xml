<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:background="@mipmap/b_pro_detail_bg"
    n1:orientation="vertical">

    <View
        n1:id="@+id/tc_view"
        n1:layout_width="fill_parent"
        n1:layout_height="0.0dip"
        n1:background="@color/transparent" />

    <LinearLayout
        n1:id="@+id/new_product_btn"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:gravity="center"
        n1:orientation="horizontal"
        n1:paddingTop="10.0dip"
        n1:paddingBottom="15.0dip">

        <ImageView xmlns:n3="http://schemas.android.com/apk/res-auto"
            n1:id="@+id/back_btn"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:src="@mipmap/back_white_image"
            n3:layout_constraintBottom_toBottomOf="parent"
            n3:layout_constraintLeft_toLeftOf="parent"
            n3:layout_constraintTop_toTopOf="parent"
            n1:paddingRight="30dp"/>

        <TextView
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:drawableLeft="@mipmap/hot_icon"
            n1:drawablePadding="5.0dip"
            n1:text="最新口子"
            n1:textColor="@color/white"
            n1:textSize="18.0sp" />

        <TextView
            n1:id="@+id/new_mouth_count"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="10.0dip"
            n1:background="@drawable/red_30dp_yuanjiao_sty"
            n1:paddingLeft="12.0dip"
            n1:paddingTop="1.0dip"
            n1:paddingRight="12.0dip"
            n1:paddingBottom="1.0dip"
            n1:text="2家"
            n1:textColor="@color/white"
            n1:textSize="13.0sp" />

        <ImageView
            n1:layout_width="0.5dip"
            n1:layout_height="fill_parent"
            n1:layout_marginLeft="10.0dip"
            n1:layout_marginTop="5.0dip"
            n1:layout_marginRight="10.0dip"
            n1:layout_marginBottom="5.0dip"
            n1:src="@color/white" />

        <LinearLayout
            n1:id="@+id/top1_time_layout"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:gravity="center_vertical"
            n1:orientation="horizontal">

            <com.yc.loanbox.view.widget.PhilText
                n1:id="@+id/hour"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:background="@drawable/black_5dp_yuanjiao_sty"
                n1:gravity="center"
                n1:minWidth="25.0dip"
                n1:paddingLeft="3.0dip"
                n1:paddingRight="3.0dip"
                n1:text="00"
                n1:textColor="@color/white"
                n1:textSize="18.0sp" />

            <TextView
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:paddingLeft="2.0dip"
                n1:paddingRight="2.0dip"
                n1:text=":"
                n1:textColor="@color/white"
                n1:textSize="15.0sp"
                n1:textStyle="bold" />

            <com.yc.loanbox.view.widget.PhilText
                n1:id="@+id/minute"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:background="@drawable/black_5dp_yuanjiao_sty"
                n1:gravity="center"
                n1:minWidth="25.0dip"
                n1:paddingLeft="3.0dip"
                n1:paddingRight="3.0dip"
                n1:text="00"
                n1:textColor="@color/white"
                n1:textSize="18.0sp" />

            <TextView
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:paddingLeft="2.0dip"
                n1:paddingRight="2.0dip"
                n1:text=":"
                n1:textColor="@color/white"
                n1:textSize="15.0sp"
                n1:textStyle="bold" />

            <com.yc.loanbox.view.widget.PhilText
                n1:id="@+id/second"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:background="@drawable/black_5dp_yuanjiao_sty"
                n1:gravity="center"
                n1:minWidth="25.0dip"
                n1:paddingLeft="3.0dip"
                n1:paddingRight="3.0dip"
                n1:text="00"
                n1:textColor="@color/white"
                n1:textSize="18.0sp" />

            <RelativeLayout
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginLeft="10.0dip">

                <ImageView
                    n1:id="@+id/arrow_image1"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:src="@mipmap/arrow_anim_01" />

                <ImageView
                    n1:id="@+id/arrow_anim_image1"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:src="@mipmap/arrow_anim_03" />

                <ImageView
                    n1:id="@+id/arrow_anim_image2"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:src="@mipmap/arrow_anim_02" />

                <ImageView
                    n1:id="@+id/arrow_image2"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_toRightOf="@id/arrow_image1"
                    n1:src="@mipmap/arrow_anim_01" />

                <ImageView
                    n1:id="@+id/arrow_image3"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_toRightOf="@id/arrow_image2"
                    n1:src="@mipmap/arrow_anim_01" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            n1:id="@+id/top1_product_layout"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:gravity="center_vertical"
            n1:orientation="horizontal"
            n1:visibility="gone">

            <LinearLayout
                n1:id="@+id/more_product_layout"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:gravity="center_vertical"
                n1:orientation="horizontal" />

            <ImageView
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_marginLeft="5.0dip"
                n1:src="@mipmap/arrow_anim_01" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>